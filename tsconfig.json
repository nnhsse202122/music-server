{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "jsx": "preserve",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "lib": [
            "ES2020"
        ],
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2020",
        "typeRoots": []
    },
    "exclude": [
        "dist",
        "index.js",
        "out",
        "resources"
    ]
}